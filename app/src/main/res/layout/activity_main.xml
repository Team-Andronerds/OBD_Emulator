<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discoverable"
        android:id="@+id/discover"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/refresh"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Server"
        android:id="@+id/server"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car 1"
        android:id="@+id/ph2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car 3"
        android:id="@+id/ph3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car 2"
        android:id="@+id/ph4"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" />


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:rowCount="3"
        android:columnCount="3"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/VIN0"
            android:text="Harsh Break"/>

        <Button
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/VIN1"
            android:text="Harsh Accel"/>

        <Button
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/VIN2"
            android:text="Harsh Turn"/>

        <Button
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/VIN3"
            android:text="5mph Over"/>

        <Button
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/VIN4"
            android:text="10mph Over"/>

        <Button
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:id="@+id/VIN5"
            android:text="15mph Over"/>

        <Button
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:id="@+id/VIN6"
            android:text="Crash"/>

        <Button
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/VIN7"
            android:text="POI"/>

        <Button
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:id="@+id/VIN8"
            android:text="Low Gas"/>

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server: Closed"
        android:id="@+id/serverStatus"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/server"
        android:layout_toStartOf="@+id/server"/>

</RelativeLayout>
